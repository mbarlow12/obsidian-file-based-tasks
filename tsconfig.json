{
	"compilerOptions": {
		"baseUrl": "src",
		"inlineSourceMap": true,
		"inlineSources": true,
		"module": "ESNext",
		"target": "ES2020",
		"allowJs": true,
		"noImplicitAny": true,
		"moduleResolution": "node",
		"importHelpers": true,
		"isolatedModules": true,
		"types": ["node"],
		"strictNullChecks": true,
		"lib": ["DOM", "ES6", "ES5", "ES7"],
    "experimentalDecorators": true,
	},
	"include": ["**/*.ts"]
}
